<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_tool_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="3dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="3dp">

        <TextView
            android:id="@+id/tv_tab1"
            android:layout_width="@dimen/address_edit_label_width"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/string_address_edit_receiver"
            android:textColor="@color/black"
            android:textSize="@dimen/text_15sp" />

        <EditText
            android:id="@+id/et_address_edit_receiver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_tab1"
            android:background="@null"
            android:hint="@string/string_address_edit_receiver_hint"
            android:padding="10dp"
            android:textSize="15sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="3dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="3dp">

        <TextView
            android:id="@+id/tv_tab2"
            android:layout_width="@dimen/address_edit_label_width"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/string_address_edit_phone"
            android:textColor="@color/black"
            android:textSize="@dimen/text_15sp" />

        <EditText
            android:id="@+id/et_address_edit_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_tab2"
            android:background="@null"
            android:hint="@string/string_address_edit_phone_hint"
            android:inputType="phone"
            android:maxLength="11"
            android:padding="10dp"
            android:textSize="15sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/color_bg" />

    <RelativeLayout
        android:id="@+id/rl_province"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="3dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="3dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_address_edit_down" />

        <TextView
            android:id="@+id/tv_tab3"
            android:layout_width="@dimen/address_edit_label_width"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/string_address_edit_province"
            android:textColor="@color/black"
            android:textSize="@dimen/text_15sp" />

        <TextView
            android:id="@+id/et_address_edit_province"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_tab3"
            android:background="@null"
            android:padding="10dp"
            android:textSize="@dimen/text_15sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_bg" />

    <RelativeLayout
        android:id="@+id/rl_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2px"
        android:background="@color/white"
        android:paddingBottom="3dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="3dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_address_edit_down" />

        <TextView
            android:id="@+id/tv_tab4"
            android:layout_width="@dimen/address_edit_label_width"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/string_address_edit_city"
            android:textColor="@color/black"
            android:textSize="@dimen/text_15sp" />

        <TextView
            android:id="@+id/et_address_edit_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_tab4"
            android:background="@null"
            android:padding="10dp"
            android:textSize="@dimen/text_15sp" />

    </RelativeLayout>

    <View
        android:background="@color/color_bg"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <RelativeLayout
        android:id="@+id/rl_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="3dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="3dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_address_edit_down" />

        <TextView
            android:id="@+id/tv_tab5"
            android:layout_width="@dimen/address_edit_label_width"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/string_address_edit_area"
            android:textColor="@color/black"
            android:textSize="@dimen/text_15sp" />

        <TextView
            android:id="@+id/et_address_edit_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_tab5"
            android:background="@null"
            android:padding="10dp"
            android:textSize="@dimen/text_15sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/color_bg" />

    <EditText
        android:id="@+id/et_address_edit_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="left|top"
        android:hint="@string/string_address_edit_detail_hint"
        android:inputType="textMultiLine"
        android:minLines="3"
        android:paddingBottom="6dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="6dp"
        android:textSize="@dimen/text_15sp" />

    <Button
        android:id="@+id/btn_address_edit_add"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/color_theme"
        android:text="@string/string_address_edit_confirm"
        android:textColor="@color/white"
        android:textSize="@dimen/text_15sp" />

</LinearLayout>