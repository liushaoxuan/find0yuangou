<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/color_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/rb_cart_group_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_cart_rb_cart_normal"
            android:padding="10dp" />

        <TextView
            android:id="@+id/tv_cart_group_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/rb_cart_group_check"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#333333"
            android:textSize="@dimen/text_16sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_cart_group_edit"
            android:background="#cccccc" />

        <TextView
            android:id="@+id/tv_cart_group_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="@string/string_cart_group_edit"
            android:textSize="@dimen/text_14sp" />

    </RelativeLayout>

    <View
        android:background="@color/color_bg"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

</LinearLayout>
