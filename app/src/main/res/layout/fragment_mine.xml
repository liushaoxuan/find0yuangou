<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_mine_header_bg"
            android:orientation="vertical">

            <include layout="@layout/layout_mine_title" />

            <LinearLayout
                android:id="@+id/ll_ucercenter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:orientation="vertical">
                <com.ahxd.lingyuangou.widget.CircleImageView
                    android:id="@+id/iv_mine_person_header"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/ic_mine_person_header_normal"
                    app:civ_border_color="@color/white"
                    app:civ_border_overlay="true"
                    app:civ_border_width="2dp" />

                <TextView
                    android:id="@+id/tv_mine_person_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="@string/string_unknown"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_16sp" />

                <TextView
                    android:id="@+id/tv_mine_person_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="@string/string_mine_login"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_16sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/draw_mine_four_tab_bg"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:id="@+id/ll_mine_wallet"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/ic_mine_wallet" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="@string/string_mine_wallet"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_mine_order"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/ic_mine_order" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="@string/string_mine_order"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_mine_favorite"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/ic_mine_favorite" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="@string/string_mine_favorite"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_mine_spread"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/ic_mine_spread" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="@string/string_mine_spread"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_12sp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@color/color_theme" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/string_mine_my_assets"
                android:textColor="@color/color_theme"
                android:textSize="16sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_mine_card_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="@color/color_theme"
                    android:textSize="@dimen/text_18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/string_mine_card_balance"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_mine_ads_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="@color/color_theme"
                    android:textSize="@dimen/text_18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/string_mine_ads_money"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_mine_money_points"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="@color/color_theme"
                    android:textSize="@dimen/text_18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/string_mine_money_points"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_12sp" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/color_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.ahxd.lingyuangou.widget.PicTextRightItem

                android:id="@+id/ptr_mine_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:image="@mipmap/ic_mine_item_card"
                app:label="@string/string_mine_my_card" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_bg" />

            <com.ahxd.lingyuangou.widget.PicTextRightItem
                android:id="@+id/ptr_mine_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:image="@mipmap/ic_mine_item_profile"
                app:label="@string/string_mine_my_profile" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_bg" />

            <com.ahxd.lingyuangou.widget.PicTextRightItem
                android:id="@+id/ptr_mine_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:image="@mipmap/ic_mine_item_location"
                app:label="@string/string_mine_my_location" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_bg" />

            <com.ahxd.lingyuangou.widget.PicTextRightItem

                android:id="@+id/ptr_mine_market_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:image="@mipmap/ic_mine_item_market_center"
                app:label="@string/string_mine_market_center" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_bg" />

            <!--购买资格-->
            <com.ahxd.lingyuangou.widget.PicTextRightItem
                android:visibility="gone"
                android:id="@+id/ptr_mine_purchase_qualificatio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:image="@mipmap/ic_revenue_record"
                app:label="@string/string_mine_purchase_qualificatio" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_bg" />

            <!--商家充值卡-->
            <com.ahxd.lingyuangou.widget.PicTextRightItem
                android:visibility="gone"
                android:id="@+id/ptr_mine_merchant_charging_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:image="@mipmap/ic_revenue_record"
                app:label="@string/string_mine_merchant_charging_card" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_bg" />

            <!--商家会员-->
            <com.ahxd.lingyuangou.widget.PicTextRightItem
                android:visibility="gone"
                android:id="@+id/ptr_mine_merchant_members"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:image="@mipmap/ic_team"
                app:label="@string/string_mine_merchant_members" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_bg" />
            <!--商家报表-->
            <com.ahxd.lingyuangou.widget.PicTextRightItem
                android:visibility="gone"
                android:id="@+id/ptr_mine_business_report"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:image="@mipmap/ic_mine_item_shop_stay"
                app:label="@string/string_mine_business_report" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_bg" />

            <!--商家订单-->
            <com.ahxd.lingyuangou.widget.PicTextRightItem

                android:id="@+id/ptr_mine_business_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:image="@mipmap/ic_mine_item_location"
                android:visibility="gone"
                app:label="@string/string_mine_business_order" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_bg" />
            <com.ahxd.lingyuangou.widget.PicTextRightItem

                android:id="@+id/ptr_mine_online_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:image="@mipmap/ic_mine_item_online_service"
                app:label="@string/string_mine_online_service" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_bg" />

            <com.ahxd.lingyuangou.widget.PicTextRightItem

                android:id="@+id/ptr_mine_contact_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:image="@mipmap/ic_mine_item_contact_us"
                app:label="@string/string_mine_contact_us" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/color_bg" />

            <com.ahxd.lingyuangou.widget.PicTextRightItem
                android:id="@+id/ptr_mine_shop_stay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:image="@mipmap/ic_mine_item_shop_stay"
                app:label="@string/string_mine_shop_stay"
                app:tipVisible="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/color_bg" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
