<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_tool_bar" />

    <ScrollView
        android:id="@+id/sv_cart_online_pay_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="10dp">

                <Button
                    android:id="@+id/btn_online_pay_add_address"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/draw_ads_pop_window_button_bg"
                    android:text="@string/string_online_pay_add_address"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_15sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/ll_online_pay_address_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/ic_shop_detail_location" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingLeft="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_online_pay_receiver"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="毛闹闹"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_16sp" />

                            <TextView
                                android:id="@+id/tv_online_pay_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:paddingRight="20dp"
                                android:text="15855555555"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_16sp" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tv_online_pay_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="8dp"
                            android:text="我的的说法的萨达开了房按时开放的加速度"
                            android:textSize="@dimen/text_15sp" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_online_pay_address_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="10dp"
                        android:src="@mipmap/ic_mine_item_right" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/color_bg" />

            <LinearLayout
                android:id="@+id/ll_online_pay_good_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"></LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/color_bg" />

            <LinearLayout
                android:id="@+id/ll_gift_gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/rb_online_pay_wallet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="10dp"
                        android:src="@drawable/draw_cart_group_rb_bg" />

                    <ImageView
                        android:id="@+id/iv_online_pay_wallet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:src="@mipmap/ic_pay_wallet" />

                    <TextView
                        android:id="@+id/tv_online_pay_wallet_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/iv_online_pay_wallet"
                        android:text="@string/string_pay_wallet"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_15sp" />

                    <TextView
                        android:id="@+id/tv_online_pay_wallet_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/tv_online_pay_wallet_name"
                        android:textSize="@dimen/text_14sp" />

                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_bg" />

                <RelativeLayout
                    android:id="@+id/rl_online_pay_weixin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/rb_online_pay_weixin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="10dp"
                        android:src="@drawable/draw_cart_group_rb_bg" />

                    <ImageView
                        android:id="@+id/iv_icon_weixin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:src="@mipmap/ic_pay_weixin" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/iv_icon_weixin"
                        android:text="@string/string_pay_weixin"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_15sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_bg" />

                <RelativeLayout
                    android:id="@+id/rl_online_pay_zhifubao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/rb_online_pay_zhifubao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="10dp"
                        android:src="@drawable/draw_cart_group_rb_bg" />

                    <ImageView
                        android:id="@+id/iv_icon_zhifubao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:src="@mipmap/ic_pay_zhifubao" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/iv_icon_zhifubao"
                        android:text="@string/string_pay_zhifubao"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_15sp" />

                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rb_huobi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/rb_online_pay_wallet_huobi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:src="@mipmap/ic_cart_rb_cart_check" />

                <ImageView
                    android:id="@+id/iv_online_pay_wallet_huobi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:src="@mipmap/ic_pay_wallet" />

                <TextView
                    android:id="@+id/tv_online_pay_wallet_giftname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/iv_online_pay_wallet_huobi"
                    android:text="我的货币"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_15sp" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="40dp"
                    android:textColor="@color/color_theme"
                    android:textSize="@dimen/text_15sp" />

                <TextView
                    android:id="@+id/tv_online_pay_wallet_giftmoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/tv_online_pay_wallet_giftname"
                    android:textSize="@dimen/text_14sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/color_bg" />

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <View
            android:background="@color/color_bg"
            android:layout_width="match_parent"
            android:layout_height="1px" />

        <TextView
            android:id="@+id/tv_online_pay_total_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="20dp"
            android:text="攻击:1222"
            android:textColor="@color/color_theme"
            android:textSize="@dimen/text_15sp" />

        <Button
            android:id="@+id/btn_online_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@color/color_theme"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:textSize="@dimen/text_15sp"
            android:text="@string/string_online_pay_check"
            android:textColor="@color/white" />

    </RelativeLayout>
</LinearLayout>