<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.youth.banner.Banner
        android:id="@+id/shop_header_banner"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:indicator_height="5dp"
        app:indicator_width="5dp"
        app:is_auto_play="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_shop_detail_logo"
            android:layout_width="@dimen/image_shop_detail_item"
            android:layout_height="@dimen/image_shop_detail_item"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_shop_detail_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:drawableLeft="@mipmap/ic_good_price_icon"
                android:drawablePadding="5dp"
                android:text="44444444"
                android:textColor="@color/color_price"
                android:textSize="@dimen/text_14sp" />

            <TextView
                android:id="@+id/tv_shop_detail_shop_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/text_16sp" />

            <TextView
                android:id="@+id/tv_shop_detail_shop_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_shop_detail_shop_name"
                android:ellipsize="end"
                android:lines="2"
                android:textSize="@dimen/text_15sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_shop_detail_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="3dp"
                android:drawableTop="@mipmap/ic_shop_detail_ad_money"
                android:text="@string/string_shop_detail_ad_money"
                android:textSize="@dimen/text_10sp" />

            <TextView
                android:id="@+id/tv_shop_detail_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/draw_favorite_button"
                android:text="@string/string_shop_detail_no_favorite"
                android:textSize="@dimen/text_10sp" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_bg" />

    <LinearLayout
        android:id="@+id/ll_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_shop_detail_location" />

        <TextView
            android:id="@+id/tv_shop_detail_shop_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="2222222"
            android:textColor="@color/black"
            android:textSize="@dimen/text_16sp" />

        <ImageView
            android:id="@+id/iv_daohang"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/icon_daohang"/>

        <ImageView
            android:id="@+id/iv_shop_detail_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@mipmap/ic_shop_detail_phone" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/color_bg" />

    <LinearLayout
        android:id="@+id/ll_food_shop_go_recharge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="去充值100元"
                android:textColor="@color/color_theme"
                android:textSize="@dimen/text_16sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_go_recharge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="去充值 >" />

    </LinearLayout>

</LinearLayout>