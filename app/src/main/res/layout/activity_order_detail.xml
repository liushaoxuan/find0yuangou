<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical">

    <include layout="@layout/layout_tool_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_order_detail_address_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/ic_shop_detail_location" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_order_detail_receiver"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="毛闹闹"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_16sp" />

                        <TextView
                            android:id="@+id/tv_order_detail_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:paddingRight="20dp"
                            android:text="15855555555"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_16sp" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_order_detail_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:text="我的的说法的萨达开了房按时开放的加速度"
                        android:textSize="@dimen/text_15sp" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/color_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/tv_order_detail_ispay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的的咖啡快递费"
                    android:textSize="@dimen/text_14sp" />

                <TextView
                    android:id="@+id/tv_order_detail_orderid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的的咖啡快递费"
                    android:textSize="@dimen/text_14sp" />

                <TextView
                    android:id="@+id/tv_order_detail_shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="adfafsadfasfasf"
                    android:textSize="@dimen/text_14sp" />

                <TextView
                    android:id="@+id/tv_order_detail_shop_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="adfafsadfasfasf"
                    android:textSize="@dimen/text_14sp" />

                <TextView
                    android:id="@+id/tv_order_detail_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的的咖啡快递费"
                    android:textSize="@dimen/text_14sp" />

                <TextView
                    android:id="@+id/tv_order_detail_total_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="考多少分卡萨丁法拉盛卡迪夫"
                    android:textSize="@dimen/text_14sp" />

                <TextView
                    android:id="@+id/tv_order_detail_freight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="疯狂大开发贷款了"
                    android:textSize="@dimen/text_14sp" />

                <TextView
                    android:id="@+id/tv_order_detail_express"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="疯狂大开发贷款了"
                    android:textSize="@dimen/text_14sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_bg" />

            <TextView
                android:id="@+id/tv_order_detail_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp"
                android:text="我等你发反馈撒地方撒旦"
                android:textSize="@dimen/text_14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/color_bg" />

            <LinearLayout
                android:id="@+id/ll_order_detail_goods_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_bg" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp">

                <TextView
                    android:id="@+id/btn_order_detail_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/draw_order_button_bg"
                    android:text="立即付款"
                    android:textColor="@color/color_theme"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/btn_order_detail_button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/btn_order_detail_button"
                    android:background="@drawable/draw_order_button_bg"
                    android:text="立即付款"
                    android:textColor="@color/color_theme"
                    android:visibility="invisible" />


                <TextView
                    android:id="@+id/tv_order_detail_total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="付款：12211"
                    android:textSize="@dimen/text_14sp" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>