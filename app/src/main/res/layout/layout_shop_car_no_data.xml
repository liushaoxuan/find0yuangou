<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shop_car_no_data"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="gone"
    android:gravity="center">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_main_rb_cart_normal"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_car_no_data_text1"
            android:textSize="@dimen/text_16sp"
            android:textColor="#333333"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_car_no_data_text2"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/text_14sp"
            android:textColor="#666666"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_to_snap_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_snap_up"
        android:layout_marginTop="20dp"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/bg_btn_to_snap_up_selector"
        android:textColor="@color/to_snap_up"/>

</LinearLayout>
