<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_address_item_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_margin="10dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_mine_address_receiver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收件人姓名"
                android:textColor="#303030"
                android:textSize="@dimen/text_16sp" />

            <TextView
                android:id="@+id/tv_mine_address_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="18515625858"
                android:textColor="#303030"
                android:textSize="@dimen/text_16sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_mine_address_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:text="我的之地发呆快放假看积分卡萨两地分居斯卡两地分居斯卡拉飞机撒开了房；地方咖啡"
            android:textColor="#565656"
            android:textSize="@dimen/text_15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_bg" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_mine_address_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@mipmap/ic_mine_address_del"
                android:drawablePadding="3dp"
                android:padding="10dp"
                android:text="@string/string_address_delete"
                android:textSize="@dimen/text_14sp" />

            <TextView
                android:id="@+id/tv_mine_address_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/tv_mine_address_delete"
                android:drawableLeft="@mipmap/ic_mine_address_edit"
                android:drawablePadding="3dp"
                android:padding="10dp"
                android:text="@string/string_address_edit"
                android:textSize="@dimen/text_14sp" />

            <ImageView
                android:id="@+id/tv_mine_address_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:src="@mipmap/ic_cart_rb_cart_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_mine_address_check"
                android:text="@string/string_address_set_normal"
                android:textSize="@dimen/text_14sp" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>