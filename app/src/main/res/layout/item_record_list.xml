<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_record_list_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:text="2018-1-16 11:57" />

    <RelativeLayout
        android:id="@+id/tv_"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/tv_record_list_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_record_list_type"
            android:layout_alignBottom="@+id/tv_record_list_type"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="充值100元"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_record_list_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/white"
            android:text="充值成功"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_record_list_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_record_list_status"
            android:layout_alignBottom="@+id/tv_record_list_status"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:text="银行卡账户"
            android:textColor="@color/black" />
    </RelativeLayout>




</LinearLayout>
