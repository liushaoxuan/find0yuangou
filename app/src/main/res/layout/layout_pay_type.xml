<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_gift_gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/ll_shengyu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <ImageView
                android:id="@+id/rb_online_pay_wallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:src="@drawable/draw_cart_group_rb_bg" />

            <ImageView
                android:id="@+id/iv_online_pay_wallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@mipmap/ic_pay_wallet" />

            <TextView
                android:id="@+id/tv_online_pay_wallet_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_online_pay_wallet"
                android:text="@string/string_pay_wallet"
                android:textColor="@color/black"
                android:textSize="@dimen/text_15sp" />

            <TextView
                android:id="@+id/tv_online_pay_wallet_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_online_pay_wallet_name"
                android:textSize="@dimen/text_14sp" />

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_bg" />

        <RelativeLayout
            android:id="@+id/rl_online_pay_weixin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <ImageView
                android:id="@+id/rb_online_pay_weixin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:src="@drawable/draw_cart_group_rb_bg" />

            <ImageView
                android:id="@+id/iv_icon_weixin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@mipmap/ic_pay_weixin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_icon_weixin"
                android:text="@string/string_pay_weixin"
                android:textColor="@color/black"
                android:textSize="@dimen/text_15sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_bg" />

        <RelativeLayout
            android:id="@+id/rl_online_pay_zhifubao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <ImageView
                android:id="@+id/rb_online_pay_zhifubao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:src="@drawable/draw_cart_group_rb_bg" />

            <ImageView
                android:id="@+id/iv_icon_zhifubao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@mipmap/ic_pay_zhifubao" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_icon_zhifubao"
                android:text="@string/string_pay_zhifubao"
                android:textColor="@color/black"
                android:textSize="@dimen/text_15sp" />

        </RelativeLayout>
    </LinearLayout>

